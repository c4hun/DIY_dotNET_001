@model TodoViewModel

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <table class="table">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Options</th>
                    <th scope="col">Check</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var t in Model.TodoList)
            {
                <tr>
                    <td class="todos-column" scope="row">@t.Id</td>
                    <td class="todos-column">@t.Name</td>
                    <td class="todos-column">@t.CreatedAt.ToLocalTime().ToString("HH:mm:ss MM-dd-yyyy")</td>
                    <td class="buttons-column">
                        <!-- and we have to handle the click events of that buttons with javascript; PROPERTY=>buttons-column; METHOD=>onclick  -->
                        <input type="submit" value="Delete" onclick="deleteTodo(@t.Id)"/>
                        <input type="submit" value="Update" onclick="populateForm(@t.Id)"/>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


