@model Todo.Models.ViewModels.TodoViewModel

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <table class="table table-hover shadow-sm rounded">
            <thead>
                <tr class="table-primary text-center">
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Created At</th>
                    <th scope="col">Options</th>
                    <th scope="col">Check</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.TodoList)
                {
                    <tr>
                        <td class="todos-column" scope="row">@t.Id</td>
                        <td class="todos-column">@t.Name</td>
                        <td class="todos-column">@t.CreatedAt.ToLocalTime().ToString("HH:mm:ss MM-dd-yyyy")</td>
                        <td class="buttons-column text-end">
                            <input type="submit" class="custom-button me-2" value="Delete" onclick="deleteTodo(@t.Id)" />
                            <input type="submit" class="custom-button" value="Update" onclick="populateForm(@t.Id)" />

                        </td>
                        <td class="text-center">
                            <input type="checkbox"
                                   class="form-check-input"
                            @(t.IsEnded ? "checked" : "")
                                   onchange="ToggleChange(@t.Id, this.checked)" />
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>


